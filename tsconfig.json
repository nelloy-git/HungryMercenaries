{
    "compilerOptions": {
      "target": "esnext",
      "lib": [
        "ES6"
      ],
      "moduleResolution": "node",
      "types": [
          "lua-types/jit",
          "typescript-to-lua",
          "love-typescript-definitions"
        ],
      "strict": true,
      "rootDir": "./src",
      "outDir": "./build",
    },

    "include": [
      "src/**/*"
    ],

    "exclude": [],

    "tstl": {
      "luaTarget": "5.3",
      "noImplicitSelf": true,
      "sourceMapTraceback": true
    },
}